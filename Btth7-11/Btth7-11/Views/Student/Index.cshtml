@model IEnumerable<Student>

@{
    ViewData["Title"] = "Danh sách sinh viên";
    Layout = "~/Views/Shared/MyLayoutHelper.cshtml"; 
}

<div class="container-fluid px-4">
    <h2 class="mt-3 mb-3 text-primary">📋 Danh sách sinh viên</h2>

    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="fas fa-user-plus"></i> Thêm sinh viên
    </a>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark text-center">
            <tr>
                <th>Mã</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Ngành</th>
                <th>Giới tính</th>
                <th>Điểm</th>
                <th>Hệ ĐT</th>
                <th>Địa chỉ</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var s in Model)
                {
                    string branchName = s.Branch switch
                    {
                        Branch.IT => "CNTT",
                        Branch.BE => "Kinh tế",
                        Branch.CE => "Công trình",
                        Branch.EE => "Điện – Điện tử",
                        _ => "Khác"
                    };

                    <tr>
                        <td class="text-center">@s.Id</td>
                        <td>@s.Name</td>
                        <td class="text-center">@s.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        <td>@branchName</td>
                        <td class="text-center">@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                        <td class="text-center">@(s.Score)</td>
                        <td class="text-center">@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                        <td>@s.Address</td>
                        <td>@s.Email</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center text-muted">Không có dữ liệu sinh viên nào.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        const table = document.querySelector("table");
        table.addEventListener("click", () => {
            table.style.backgroundColor = "rgba(255, 255, 0, 0.1)";
        });
    </script>
}
