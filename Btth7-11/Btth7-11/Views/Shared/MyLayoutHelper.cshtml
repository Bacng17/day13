<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" />
</head>

<body class="sb-nav-fixed">
    <partial name="TopNav" />
    <div id="layoutSidenav" class="d-flex">
        <div id="layoutSidenav_nav" class="sb-sidenav bg-dark text-white">
            @await Component.InvokeAsync("Render")
        </div>
        <div id="layoutSidenav_content" class="flex-grow-1">
            <main class="p-4">
                @RenderBody()
            </main>
            <footer class="py-3 bg-light mt-auto text-center border-top">
                <partial name="Footer" />
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
