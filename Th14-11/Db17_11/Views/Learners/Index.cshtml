@model IEnumerable<Db17_11.Models.Learner>

<h2>Learners</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>LastName</th>
            <th>FirstMidName</th>
            <th>EnrollmentDate</th>
            <th>Major</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LastName</td>
                <td>@item.FirstMidName</td>
                <td>@item.EnrollmentDate.ToShortDateString()</td>
                <td>@item.Major.MajorName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LearnerId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LearnerId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.LearnerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
